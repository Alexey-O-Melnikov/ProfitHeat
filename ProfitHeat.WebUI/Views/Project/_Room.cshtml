@model ProfitHeat.Domain.Room

<ul>
    <li>
        <div class="form-group">
            @Html.LabelFor(m => m.Title, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.Title, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
    </li>
    @*<div class="form-group">
            @Html.LabelFor(model => model.TypeRoomID, "TypeRoomID", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("TypeRoomID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.TypeRoomID, "", new { @class = "text-danger" })
            </div>
        </div>*@

    @{
        Html.RenderAction("_TypeRooms", new { typeRoomID = Model.TypeRoomID });
    }
    @{
        Html.RenderAction("_Radiator", new { radiatorID = Model.RadiatorID });
    }
    @{ int i = 1; }
    @foreach (var window in Model.Windows)
    {

        @:<li>
            Html.RenderAction("_Window", new { windowID = window.WindowID, i = i });
        @:</li>
        i++;
    }
    @foreach (var cladding in Model.Claddings)
    {
        @:<li>
            Html.RenderAction("_Cladding", new { claddingID = cladding.CladdingID });
        @:</li>
    }
</ul>
