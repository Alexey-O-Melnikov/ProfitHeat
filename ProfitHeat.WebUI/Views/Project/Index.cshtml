@model ProfitHeat.Domain.Project
@{
    ViewBag.Title = Model?.Title ?? "New";
}

<h2>@ViewBag.Title</h2>

<section id="initialData" class="left">
    <div id="mainLocation">
        @{
            Html.RenderAction("_Locations", new { locationID = Model.LocationID });
        }
    </div>
    <div id="level">

    </div>
    <div id="room">
        @{
            Html.RenderAction("_Room", new { roomID = 3 });
        }
    </div>
</section>

<section id="plot" class="top">
    <div id="buttonsForDrawing">
        <div id="inWallPlot" class="btn">
            <img src="#" alt="Внешняя стена" />
        </div>
        <div id="outWallPlot" class="btn">
            <img src="#" alt="Внутренняя стена" />
        </div>
        <div id="windowPlot" class="btn">
            <img src="#" alt="Окно" />
        </div>
        <div id="doorPlot" class="btn">
            <img src="#" alt="Дверь" />
        </div>
    </div>
    <div>
        <canvas id="canvas">
            Браузер не поддерживает canvas
        </canvas>
    </div>
</section>

<section id="result" class="right">
    <label>Мощность котла</label>
    <label>Диаметр теплоносителя</label>
    <table>
        <thead>
            <tr><td>Название комнаты</td><td>Количество секций</td></tr>
        </thead>
        <tbody></tbody>
    </table>
</section>