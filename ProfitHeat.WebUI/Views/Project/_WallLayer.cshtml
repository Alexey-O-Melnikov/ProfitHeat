@model ProfitHeat.Domain.WallLayer

<ul>
    <li>
        @{
            Html.RenderAction("_Materials", new { materialID = Model.MaterialID });
        }
    </li>
    <li>
        <div class="form-group">
            @Html.LabelFor(model => model.Thickness, htmlAttributes: new { @class = "control-label col-md-2" })
